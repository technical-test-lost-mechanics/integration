<section class="block container <%= typeof reverse!='undefined' && reverse ? 'block--reverse' : '' %>">
    <div>
        <% if (typeof title!='undefined' && title) { %>
            <h2 class="js-text" data-cartapus><%= title %></h2>
        <% } %>

        <% if (typeof text!='undefined' && text) { %>
            <p class="block__text js-text" data-cartapus><%= text %></p>
        <% } %>

        <% if (typeof buttonText!='undefined' && buttonText && typeof buttonLink!='undefined' && buttonLink) { %>
            <%= require('../components/button.ejs')({
                buttonText,
                buttonLink,
                buttonClass : 'button--pink'
            }) %>
        <% } %>
    </div>

    <div>
        <% if (typeof number!='undefined' && number) { %>
            <p class="block__number" data-cartapus data-cartapus-threshold="0.8">
                <span>0</span>
                <span><%= number %></span></p>
        <% } %>
    </div>
</section>
